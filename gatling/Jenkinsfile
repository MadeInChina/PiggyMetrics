pipeline {
    agent any

    tools {
            maven 'maven'
    }
    stages {
        stage('Build') {
            steps {
                dir ('gatling') {
                   sh 'mvn clean install'
                }
            }
        }
        stage('Image Build And Push') {
            steps {
                dir ('gatling') {
                    script {
                        def app =  docker.build "registry.docker.com/piggymetrics-gatling:2.3.0.RELEASE"
                        app.push()
                    }
                }
            }
        }
    }
}