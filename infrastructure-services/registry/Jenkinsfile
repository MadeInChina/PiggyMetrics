pipeline {
    agent any

    tools {
            maven 'maven'
    }
    stages {
        stage('Build') {
            steps {
                dir ('infrastructure-services/registry') {
                   sh 'mvn clean install'
                }
            }
        }
        stage('Image Build And Push') {
            steps {
                dir ('infrastructure-services/registry') {
                    script {
                        def app = docker.build 'slamhan/piggymetrics-registry:2.0.4-SNAPSHOT'
                        app.push()
                    }
                }
            }
        }
        stage('deploy') {
            steps {
                dir ('infrastructure-services/registry/yaml/service') {
                    withKubeConfig(credentialsId: 'kube-local-test.config') {
                        sh 'kubectl get pods'
                        sh 'kubectl apply -f registry-service.yaml'
                    }
                }
            }
        }
    }
}