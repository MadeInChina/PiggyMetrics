pipeline {
    agent any

    tools {
            maven 'maven'
    }
    stages {
        stage('Build') {
            steps {
                dir ('infrastructure-services/gateway') {
                   sh 'mvn clean install'
                }
            }
        }
        stage('Image Build And Push') {
            steps {
                dir ('infrastructure-services/gateway') {
                    script {
                        def app = docker.build 'slamhan/piggymetrics-gateway:2.0.4-SNAPSHOT'
                        app.push()
                    }
                }
            }
        }
    }
}